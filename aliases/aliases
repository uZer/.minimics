envtosecret() {
  grep -e '^[_a-zA-Z]\+=.\+$' $1 | awk -F '=' '{ "echo -n '\''"$2"'\'' | base64 -w0 | xargs" | getline var1 ; print $1": "var1 }'
}

secrettoenv() {
  grep -e '^ *[_a-zA-Z]\+: [=0-9A-Za-z]\+$' $1 | awk '{ "echo -n "$2" | base64 -d" | getline var1; print substr($1, 1, length($1)-1)"="var1 }'
}

